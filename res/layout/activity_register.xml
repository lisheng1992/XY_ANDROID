<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical" >

    <include layout="@layout/activity_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logintop"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/register_username_Txt"
            android:textColor="#000000"
            style="@style/textStyle20" />

        <EditText
            android:id="@+id/regist_username_edt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:ems="10"
            android:focusable="true"
            android:digits="@string/login_edt_digit"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            style="@style/textStyle20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/loginmiddle"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/register_password_Txt"
            android:textColor="#000000"
            style="@style/textStyle20" />

        <EditText
            android:id="@+id/regist_password_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="10"
            android:focusable="true"
            android:inputType="textPassword"
            android:digits="@string/register_edit_pwd_digit"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            style="@style/textStyle20" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/loginmiddle"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/register_affirmPassword_Txt"
            android:textColor="#000000"
            style="@style/textStyle20" />

        <EditText
            android:id="@+id/regist_affirm_password_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:ems="10"
            android:focusable="true"
            android:inputType="textPassword"
            android:digits="@string/register_edit_pwd_digit"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            style="@style/textStyle20" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/loginmiddle"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/register_email_Txt"
            android:textColor="#000000"
            style="@style/textStyle20" />

        <EditText
            android:id="@+id/regist_email_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:ems="10"
            android:focusable="true"
            android:digits="@string/mailbox_edt_digit"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            style="@style/textStyle20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/loginbott"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/register_age_Txt"
            android:textColor="#000000"
            style="@style/textStyle20" />

        <EditText
            android:id="@+id/regist_age_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:ems="10"
            android:focusable="true"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            style="@style/textStyle20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/regist_submit"
            android:layout_width="124dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:background="@drawable/all_btn_bg"
            android:onClick="onClinkHandle"
            android:text="@string/register_sure_Txt"
            android:textColor="#ffffff" 
            style="@style/textStyle20"/>

    </LinearLayout>

</LinearLayout>