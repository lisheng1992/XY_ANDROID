<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/test_model_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此为试题所属模块"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/test_content_txt"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="此为试题的内容"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/test_choose_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/main_healthfile_rd1"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/main_healthfile_rd2"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/main_healthfile_rd3"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/main_healthfile_rd4"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/main_healthfile_rd5"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/main_healthfile_rd6"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>